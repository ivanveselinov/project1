
<h1>Welcome to: <%= @properties.adress %></h1>
<div class="row">
  <div class="col-6">
<%= cl_image_tag @properties.photos, :class => 'fearture-images' if @properties.photos.present? %>

<ul>
  <li>🏡 Adress: <%= @properties.adress %></li>
  <li>🏞 Suburb: <%= @properties.suburb %> </li>
  <li>📬 PostCode: <%= @properties.postcode %></li>
  <li>🛋 Rooms: <%= @properties.rooms %> </li>
  <li>🛋 Livingrooms: <%= @properties.livingrooms %></li>
  <li>🛏 Bedrooms: <%= @properties.bedrooms %></li>
  <li>🛁 Bathrooms: <%= @properties.bathrooms %></li>
  <li>🚽 Toilets: <%= @properties.toilets %></li>
  <li>🍙 Garage: <%= @properties.garage %></li>
  <li>🚗 Parking Space: <%= @properties.pspace %></li>
  <li>💵 Rent: <%= @properties.rent %> per week</li>
  <li> <input type="checkbox" name="availability" <%= "checked" if @properties.availablitly %> disabled data-toggle="toggle" data-on="Available" data-off="Not Available" data-onstyle="success" data-offstyle="danger"></li>

  <% @properties.agents.each do |property| %>
    <%= link_to cl_image_tag(property.image, :class => 'fearture-agents'), property %>
  <% end %>
</ul>
</div>

<div class="col-6">
<% @properties.images.each do |image| %>
<%= cl_image_tag image, :class => 'gallerycard gallery' %>
<% end %>
</div>
<% if @current_user.present? &&  @current_user.admin? %>

  <%= link_to 'Edit Property', edit_property_path %>
  <%= link_to 'Delete Property', @properties, :method => 'delete', :data =>{ :confirm => 'Are you sure?'}  %>


<% end %>


<% if @current_user.present? && @current_user.premium?  %>
<%= link_to 'Edit Property', edit_property_path %>
<%= link_to 'Delete Property', @properties, :method => 'delete', :data =>{ :confirm => 'Are you sure?'}  %>
<% end %>
</div>
