<h1>Welcome: <%= @current_user.email %></h1>
<%= image_tag @current_user.image, :class => 'fearture' if @current_user.image.present? %>
<h3>Name: <%= @current_user.name %></h3>
<h3>Surname: <%= @current_user.surname %></h3>
<h3>Mobile: <%= @current_user.mobile %></h3>
<h3>Phone: <%= number_to_phone @current_user.phone, :area_code => true %></h3>
<h1>List of Properties</h1>
<div class="index">
<% @current_user.properties.each do |property| %>
<div class="propertycard">
<p><%= property.adress %></p>
<%= image_tag property.photos, :class => 'fearture' if property.photos.present? %>
<%= link_to 'Edit Property', edit_property_path(property) %>
<%= link_to 'Delete Property', property, :method => 'delete', :data =>{ :confirm => 'Are you sure?'}  %>
</div>
<% end %>
